<br clear="all">
<h3 class="text-center">
  {{#if model.servicePlan}}
    {{translate-text key="selectedServicePlan"}}
  {{else}}
    {{translate-text key="selectAServicePlan"}}
  {{/if}}
</h3>
<hr>
<br clear="all">
{{#liquid-unless model.servicePlan}}
  <div class="row justify-content-center mb-5 mx-2">
    {{#each model.servicePlans as |plan|}}
      {{#if plan.display}}
        {{service-plan plan=plan model=model}}
      {{/if}}
    {{/each}}
  </div>
{{else}}
  {{#if model.servicePlan.period}}
    <div class="row justify-content-center mb-5 mx-2">
      <div class="col-auto text-center">
        {{selected-service-details servicePlan=model.servicePlan}}
      </div>
    </div>
  {{/if}}
{{/liquid-unless}}
{{#if model.servicePlan}}
  <div class="row mb-5 justify-content-center">
      <div class="col-auto">
        <button class="btn btn-secondary text-white" {{action 'resetServicePlan'}}>{{translate-text key="viewOtherOptions"}}</button>
      </div>
    <div class="col-auto">
      <button class="btn btn-primary" id="proceed" type="submit" {{action 'proceed'}}><span>{{translate-text key="proceed"}}</span></button>
    </div>
  </div>
{{/if}}